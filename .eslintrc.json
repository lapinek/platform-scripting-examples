{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "off"
    },
    "globals": {
        "JavaImporter": "readonly",
        "org": "readonly",
        "logger": "readonly",
        "requestParameters": "readonly",
        "callbacks": "readonly",
        "com": "readonly",
        "javax": "readonly",
        "action": "writable",
        "session": "readonly",
        "httpClient": "readonly"
    }
}
